{% extends "layouts.master" %}
{% block content %}
  <section class="bg-gradient-to-tr from-primary to-primary/90 text-white py-12 shadow-md mb-10">
    <div class="container mx-auto text-center">
      <h1 class="text-3xl font-extrabold tracking-wide mb-2">{{ page.title }}</h1>
      {% component 'header.breadcrumbs' %}
    </div>
  </section>

  <div class="container mx-auto flex flex-col lg:flex-row gap-10 pb-24">
    <!-- Sidebar -->
    <aside class="w-full lg:w-1/4 bg-white shadow-md rounded-lg p-6">
      {% if is_page('customer.profile') %}
        <div class="flex flex-col items-center mb-6">
          <div class="h-24 w-24 rounded-full overflow-hidden border-4 border-primary shadow-md">
            <salla-file-upload profile-image value="{{ user.avatar }}">
              <span class='avatar-placeholder flex flex-col items-center justify-center text-gray-500 h-full w-full'>
                <i class="sicon-user text-2xl mb-1"></i>
                <span class='text-xs'>{{ trans('common.uploader.choose_suitable_picture') }}</span>
              </span>
            </salla-file-upload>
          </div>
          <h3 class="mt-4 font-semibold text-gray-800">{{ user.full_name }}</h3>
        </div>
      {% endif %}

      <div>
        <salla-user-menu inline></salla-user-menu>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="w-full lg:w-3/4 bg-white shadow-md rounded-lg p-8">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-800">{{ page.title }}</h2>
        {% if is_current_url('order') and order.source is same as('buy_as_gift') %}
          <span class="inline-flex items-center bg-primary/10 text-primary text-sm font-medium px-3 py-1 rounded-full">
            <i class="sicon-gift-sharing mr-1"></i> {{ trans('pages.orders.gift_tag') }}
          </span>
        {% endif %}
      </div>

      <!-- Inner content block for specific page -->
      <div>
        {% block inner_content %}
        <p class="text-gray-500">المحتوى الخاص بالعميل يظهر هنا...</p>
        {% endblock %}
      </div>
    </main>
  </div>
{% endblock %}
